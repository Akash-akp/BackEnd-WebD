<style>
    #review-container {
        margin: 50px 10%;
    }

    .rating{
        display: flex;
        flex-direction: row;
        justify-content: space-around;
    }

    .rating input[type="radio"] {
        display: none;
    }

    .rating label {
        cursor: pointer;

    }

    .staricon{
        height: 48px;
        width: 48px;
        border: 2px solid white;
        background-color: #D9D9D9;
    }


    form{
        margin-top: 40px;
    }
    
    textarea{
        margin-top: 40px;
    }

    button{
        margin-top: 30px;
    }
</style>
<div id="review-container">
    <h1 class="h2text bold text-center">Rate Us and Share Your Thoughts:</h1>
    <form action="/review/create" method="POST">
        <p class="subtitle bold">Ratings:</p>
        <div class="rating">
            <label for="star1">
                <img src="/icon/review/Star.png" class="staricon" alt="">
                <input type="radio" name="star" id="star1" value="1">
            </label>
            <label for="star2">
                <img src="/icon/review/Star.png" class="staricon" alt="">
                <input type="radio" name="star" id="star2" value="2">
            </label>
            <label for="star3">
                <img src="/icon/review/Star.png" class="staricon" alt="">
                <input type="radio" name="star" id="star3" value="3">
            </label>
            <label for="star4">
                <img src="/icon/review/Star.png" class="staricon" alt="">
                <input type="radio" name="star" id="star4" value="4">
            </label>
            <label for="star5">
                <img src="/icon/review/Star.png" class="staricon" alt="">
                <input type="radio" name="star" id="star5" value="5">
            </label>
        </div>
        <textarea name="message" class="textArea bodytext" placeholder="Write your thoughts...."></textarea>
        <div class="text-center">
            <button type="submit" class="btn">Post</button>
        </div>
    </form>


    <script>
        let star = document.querySelectorAll(".rating img");
        
        for(let i=0;i<5;i++){
            star[i].addEventListener("click",function(event){
                let j;
                for(j=0;j<=i;j++){
                    star[j].style.backgroundColor = "#FF8C00";
                }
                for(;j<5;j++){
                    star[j].style.backgroundColor = "#D9D9D9";
                }
            })
        }

    </script>
</div>